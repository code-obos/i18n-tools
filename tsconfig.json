{
  "compilerOptions": {
    "lib": ["ESNext"],
    "target": "ES2017",
    "module": "node16",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,

    "strict": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,

    "outDir": "lib",
    "types": ["node"]
  },
  "include": ["src"]
}